#!/bin/bash

###################################################################################################

source "$HOME/00-manual/scripts/lib/constants"
source "$LIB/help"
checkForHelp "$1" "file_path"
checkForProperArgCount 1 $@

###################################################################################################

FILE_PATH="$1"

###################################################################################################

sed -i -e 's/\t/  /g' -e 's/  \*/\t\*/g' "$FILE_PATH"

